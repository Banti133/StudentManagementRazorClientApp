@page
@model StudentManagementRazorClientApp.Pages.CourseListModel
@{
    ViewData["Title"] = "Course List";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.mint-5">
<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-light p-2 rounded shadow-sm">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Course List</li>
    </ol>
</nav>

<!-- Header and Create Button -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-success"><i class="fas fa-book-open"></i> Course List</h1>
    <a asp-page="/CourseCreate" class="btn btn-success shadow-sm">
        <i class="fas fa-plus-circle"></i> Create New Course
    </a>
</div>

<!-- Table Card -->
<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col"><i class="fas fa-id-badge"></i> Course ID</th>
                        <th scope="col"><i class="fas fa-heading"></i> Title</th>
                        <th scope="col"><i class="fas fa-coins"></i> Credit</th>
                        <th scope="col"><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in await Model.CourseList)
                    {
                        <tr>
                            <td>@course.CourseId</td>
                            <td>@course.Title</td>
                            <td>@course.Credit</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="/CourseDetails" asp-route-id="@course.CourseId" class="btn btn-info btn-sm me-2">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a asp-page="/CourseEdit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm me-2">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@course.CourseId" style="display:inline;">
                                        <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this course?');">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

<style>
    .btn:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }

    .breadcrumb a {
        text-decoration: none;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .card {
        border-radius: 10px;
    }
</style>