@page
@model StudentManagementRazorClientApp.Pages.EnrollmentListModel
@{
    ViewData["Title"] = "Enrollment List";
}

<div class="container mt-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light p-2 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Enrollment List</li>
        </ol>
    </nav>

    <!-- Header and Create Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-info"><i class="fas fa-clipboard-list"></i> Enrollment List</h1>
        <a asp-page="/EnrollmentCreate" class="btn btn-success shadow-sm">
            <i class="fas fa-plus-circle"></i> Create New Enrollment
        </a>
    </div>

    <!-- Table Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col"><i class="fas fa-user-graduate"></i> Student Name</th>
                            <th scope="col"><i class="fas fa-book"></i> Course Name</th>
                            <th scope="col"><i class="fas fa-calendar-day"></i> Joining Date</th>
                            <th scope="col"><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in await Model.EnrollmentList)
                        {
                            <tr>
                                <td>@enrollment.Student?.Name</td>
                                <td>@enrollment.Course?.Title</td>
                                <td>@enrollment.Joiningdate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="/EnrollmentDetails" asp-route-id="@enrollment.EnrollemntId" class="btn btn-info btn-sm me-2">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                        <a asp-page="/EnrollmentEdit" asp-route-id="@enrollment.EnrollemntId" class="btn btn-warning btn-sm me-2">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@enrollment.EnrollemntId" style="display:inline;">
                                            <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this enrollment?');">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .btn:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease-in-out;
    }

    .breadcrumb a {
        text-decoration: none;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .card {
        border-radius: 10px;
    }
</style>